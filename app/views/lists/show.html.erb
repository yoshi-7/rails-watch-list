
<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title"><%= @list.name %></h2>

            <h4 class="card-subtitle mb-5">Bookmarks:</h4>
            <ul class="list-group">
                <% @list.bookmarks.each do |bookmark| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= bookmark.movie.title %>
                        <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
                    </li>
                <% end %>
            </ul>

            <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
            <%= link_to 'Back to Lists', lists_path, class: "btn btn-secondary mt-3" %>
        </div>
    </div>
</div>
