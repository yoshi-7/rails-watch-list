<div class="container">
  <h2><%= @list.name %></h2>

  <h3>Bookmarks:</h3>
      <% @list.bookmarks.each do |bookmark| %>
        <li>
          <%= bookmark.movie.title %>
          <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </ul>


  <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to 'Back to Lists', lists_path, class: "btn btn-secondary" %>
</div>
